@page "{id}"
@model HospitalManagement.Pages.Covids.EditModel
@{
}
<h3>Updating Result (@Model.Id)</h3>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Result"></label>
        <select asp-for="@Model.Result" asp-items="@Model.Results" class="form-control"></select>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="row gx-0">
        <button type="submit" class="col btn btn-success me-1">Save</button>
        <a href="/Covids/List" class="col btn btn-default border-secondary ms-1" role="button">Cancel</a>
    </div>
</form>