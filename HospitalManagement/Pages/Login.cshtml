@page
@model HospitalManagement.Pages.LoginModel
@{
}
<form method="post">
    <div class="form-control">
        <div class="form-group col ms-2 ">
            <label asp-for="@Model.AadharNo"></label>
            <input type="text" asp-for="@Model.AadharNo" class="form-control" />
        </div>

        <div class="form-group col ms-2 ">
            <label asp-for="@Model.Dob"></label>
            <input type="password" asp-for="@Model.Dob" class="form-control" placeholder="yyyy-MM-dd" />
        </div>
        <div class="form-group">
            <h6 class="text-success">@Model.SuccessMessage</h6>
            <h6 class="text-danger"></h6>
            <h6 class="text-danger">@Model.ErrorMessage</h6>
            <h6 class="text-danger">@Html.ValidationSummary()</h6>
        </div>
        <div class="row gx-0">
            <button type="submit" class="col btn btn-success me-3 mt-3">LogIn</button>
            <a href="/Index" class="col btn btn-danger border-secondary ms-3 mt-3" role="button">Cancel</a>
        </div>
    </div>
</form>