@page "{PatientId}"
@model HospitalManagement.Pages.Patients.VaccineRegistrationModel
@{
}
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.HospitalId"></label>
        <select asp-for="@Model.HospitalId" asp-items="@Model.HospitalList" class="form-select"></select>
    </div>

    <div class="form-group">
        <label asp-for="@Model.MedicineId"></label>
        <select asp-for="@Model.MedicineId" asp-items="@Model.MedicineList" class="form-select"></select>
    </div>

    <div class="form-group">
        <label asp-for="@Model.AppointmentDate"></label>
        <input type="date" asp-for="@Model.AppointmentDate" class="form-control">
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="row gx-0">
        <button type="submit" class="col btn btn-success me-1">Register</button>
        <a href="/Patients/Profile" class="col btn btn-default border-secondary ms-1" role="button">Cancel</a>
    </div>
</form>